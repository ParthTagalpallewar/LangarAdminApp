<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthSelection">

    <TextView
        android:id="@+id/tv_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started !"
        android:textSize="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_registerOrLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register or Login "
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/tv_getStarted"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/circularstd_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As Volontiers"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/tv_registerOrLogin"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/circularstd_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/auth_bg_card">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/red_500"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cv_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>



    </RelativeLayout>





</RelativeLayout>